
<div class="container">
  <h1>My Cocktails ! 🍸 </h1>

  <div class="card">
    <ul>
    <% @cocktails.each do |cocktail| %>
      <li>
      <%= link_to cocktail.name, cocktail_path(cocktail) %>
    </li>
    <% end %>
    </ul>
  </div>


  <p><%= link_to 'Add a cocktail', new_cocktail_path %></p>

</div>


