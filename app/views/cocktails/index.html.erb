<div class="Title">
  <h1>My Cocktails ! 🍸 </h1>
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
    <div class="card">
        <h3 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
    </div>
    <% end %>
  </div>



  <p><%= link_to 'Add a cocktail', new_cocktail_path %></p>

</div>


